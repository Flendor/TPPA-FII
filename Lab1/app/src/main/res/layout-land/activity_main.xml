<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/background_light" android:id="@+id/mainApp">
    <ListView
            android:layout_width="378dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/myListView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text=""
            android:layout_width="204dp"
            android:layout_height="210dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:id="@+id/description" android:layout_marginStart="43dp"
            app:layout_constraintStart_toEndOf="@+id/myListView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="42dp" android:layout_marginTop="95dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="90dp" app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center" android:textColor="@android:color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>