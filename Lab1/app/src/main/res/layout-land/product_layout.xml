<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/background_light"
        android:id="@+id/mainApp">

    <com.mikhaellopez.circularimageview.CircularImageView
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="254dp"
            android:layout_height="254dp"
            android:id="@+id/productImage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/image"
            app:civ_border_color="#000000"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#87CEEB"
            android:layout_marginTop="30dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productName" android:textSize="46sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="161dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="161dp" android:gravity="center"
            android:textColor="@android:color/black" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"/>
    <TextView
            android:text=""
            android:layout_width="296dp"
            android:layout_height="143dp"
            android:id="@+id/productDescription" android:textSize="28sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" app:layout_constraintStart_toEndOf="@+id/productImage"
            android:layout_marginStart="56dp"
            android:layout_marginTop="90dp" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

