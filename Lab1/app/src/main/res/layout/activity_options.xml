<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/optionsApp">

    <TextView
            android:text="App Background Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorSetting"
            android:textSize="36sp" android:gravity="center"
            android:textColor="@android:color/black" android:typeface="serif"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="122dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="123dp"
            android:textStyle="bold" android:textAllCaps="true" app:layout_constraintHorizontal_bias="0.497"
            android:visibility="gone"/>

    <Button
            android:layout_width="217dp"
            android:layout_height="70dp"
            android:text="White"
            android:id="@+id/colorButton" android:textSize="40sp"
            android:background="@android:color/darker_gray" android:tag="0" android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/colorSetting" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>