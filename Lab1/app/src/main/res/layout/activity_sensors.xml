<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/optionsApp">

    <TextView
            android:text="Proximity:"
            android:layout_width="363dp"
            android:layout_height="96dp"
            android:id="@+id/proximity"
            android:textSize="30sp" android:gravity="center"
            android:textColor="@android:color/black" android:typeface="serif"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="122dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="123dp"
            android:textStyle="bold" android:textAllCaps="true"
            android:visibility="visible" app:layout_constraintHorizontal_bias="0.497"/>

    <TextView
            android:text="Gravity:"
            android:layout_width="363dp"
            android:layout_height="96dp"
            android:id="@+id/gravity"
            android:textSize="24sp" android:gravity="center"
            android:textColor="@android:color/black" android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="122dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="123dp"
            android:textStyle="bold" android:textAllCaps="true"
            android:visibility="visible" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/proximity"/>

    <TextView
            android:text="Gyroscope:"
            android:layout_width="363dp"
            android:layout_height="96dp"
            android:id="@+id/gyroscope"
            android:textSize="20sp" android:gravity="center"
            android:textColor="@android:color/black" android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="122dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="123dp"
            android:textStyle="bold" android:textAllCaps="true"
            android:visibility="visible" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/magnetic"/>

    <TextView
            android:text="Pressure"
            android:layout_width="363dp"
            android:id="@+id/pressure"
            android:textSize="30sp" android:gravity="center"
            android:textColor="@android:color/black" android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="122dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="123dp"
            android:textStyle="bold" android:textAllCaps="true"
            android:visibility="visible" app:layout_constraintHorizontal_bias="0.497"
            android:layout_height="96dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/gravity"/>

    <TextView
            android:text="Magnetic Field:"
            android:layout_width="363dp"
            android:layout_height="96dp"
            android:id="@+id/magnetic"
            android:textSize="30sp" android:gravity="center"
            android:textColor="@android:color/black" android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="122dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="123dp"
            android:textStyle="bold" android:textAllCaps="true"
            android:visibility="visible" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/pressure"/>

</androidx.constraintlayout.widget.ConstraintLayout>